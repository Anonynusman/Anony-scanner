FROM kalilinux/kali-rolling
RUN echo "deb http://old.kali.org/kali sana main non-free contrib" >> ./etc/apt/sources.list
RUN apt-get update && apt-get -yu dist-upgrade -y
WORKDIR /scan
RUN apt-get install -y \
  python2.7 \
  wget \
  dmitry \
  dnsrecon \
  wapiti \
  nmap \
  sslyze \
  dnsenum \
  wafw00f \
  golismero \
  dirb \
  host \
  lbd \
  xsser \
  dnsmap \
  dnswalk \
  fierce \
  davtest \
  whatweb \
  nikto \
  uniscan \
  whois \
  theharvester

RUN wget -O scan.py https://raw.githubusercontent.com/Anonynusman/Anony-scanner/main/scan.py && chmod +x scan.py
RUN ln -s /scan/scan.py /usr/local/bin/scan
WORKDIR /reports
ENTRYPOINT ["scan"]
